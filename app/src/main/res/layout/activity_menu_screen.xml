<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"

    tools:context="com.example.junkai.finalproject.MenuScreen">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/backgroundFrame"
        android:alpha=".6">

    </FrameLayout>

    <TextView
        android:text="Skyscraper\nBuilder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameOfGameTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/gameStartButton"
        android:elevation="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_below="@+id/nameOfGameTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScoreButton"
        android:layout_marginTop="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_below="@+id/gameStartButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
